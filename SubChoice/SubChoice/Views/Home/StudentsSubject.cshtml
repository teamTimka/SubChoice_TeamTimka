@using SubChoice.Core.Data.Entities
<div class=" Subj">
    @{
        ViewData["Title"] = "Students";
    }
    <div class="d-flex justify-content-between my-4"><h1 class="p-0" style="margin-left:3%;">@ViewData["Title"]</h1> </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @{
                var data = (List<Student>)ViewData["StudentsSubject"];
            }
            @foreach (var student in @data)
            {
                <tr>
                    <td>@student.User.DisplayName</td>
                </tr>
            }

        </tbody>

    </table>
    <div class="form-group d-flex justify-content-between pt-3">
        @if (User.IsInRole("Teacher"))
        {
            <button type="submit" class="btn  btn-login" onclick="location.href = '@(Url.Action("MySubjects", "Home"))'">Back</button>

        }
        else
        {
            <button type="submit" class="btn  btn-login" onclick="location.href = '@(Url.Action("AllSubjects", "Admin"))'">Back</button>
        }
    </div>
</div>
