@model SubChoice.Core.Data.Dto.SubjectData
    <div class=" Subj">
        @{
            ViewData["Title"] = "Create subject";
        }


        <div class="container">
            <h1 class="text-center" style="margin-left:3%;">@ViewData["Title"]</h1>
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <form asp-controller="Home" asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="StudentsLimit">Capacity</label>
                            <input asp-for="StudentsLimit" class="form-control" />
                            <span asp-validation-for="StudentsLimit" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TeacherId">Teacher</label>
                            <input asp-for="TeacherId" class="form-control" />
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between pt-3">
                            <button type="submit" class="btn btn-login" onclick="history.go(-1); return false;">Back</button>
                            <button type="submit" class="btn btn-login">Create</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
